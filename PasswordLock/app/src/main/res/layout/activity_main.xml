<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/image"
            android:src="@drawable/lock_logo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/passwrodlock_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:typeface="sans"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textScaleX="1.1"
            android:text="@string/passwordlock_reminder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/passwrodlock_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/rounded_edit_text"
            android:typeface="sans"
            android:maxLength="6"
            android:textScaleX="1.1"
            android:textSize="15sp"/>

        <com.example.karl.passwordlock.PasswordKeyboardView
            android:id="@+id/passwrodlock_view_keyboard"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/colorKeyBackground"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyTextColor="@color/colorText"
            android:shadowColor="@android:color/transparent"
            android:shadowRadius="0"
            app:xnkv_deleteDrawable="@mipmap/key_delete"
            app:xnkv_enterDrawable="@mipmap/key_enter"/>

    </LinearLayout>

